= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  %legend= t('.change')
  = f.error_notification
  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token
  .form-inputs
    = f.input :password, label: t('.new_password'), required: true, input_html: { class:  'medium-field' }
    = f.input :password_confirmation, label: t('.confirm'), required: true, input_html: { class:  'medium-field' }
  .form-actions
    = f.button :submit, t('.change')
= render 'devise/shared/links'