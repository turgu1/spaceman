= simple_form_for(@equipment_model) do |f|
  = f.error_notification

  .form-inputs
    = f.association :equipment_group, as: :hidden
    = f.input :name, input_html: { class: 'large-field' }
    = f.input :order, input_html: { :class => 'small-field'}
    = f.input :photo, :as => :file
    = f.input :supplier, input_html: { class: 'large-field' }
    = f.input :model_ident, input_html: { class: 'large-field' }
    = f.input :price, input_html: { class: 'money-field', value: number_with_precision(f.object.price, precision: 2) }
    = f.input :notes

  .form-actions
    = f.button :submit
